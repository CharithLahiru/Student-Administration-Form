<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="700.0" minWidth="590.0" prefHeight="824.0" prefWidth="1042.0" stylesheets="@../css/MainFormStylesheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.app.controllers.MainFormController">
   <children>
      <Button fx:id="btnNewStudent" layoutX="26.0" layoutY="28.0" mnemonicParsing="false" onAction="#btnNewStudentOnAction" style="-fx-background-color: #5dfd75;" text="+ New Student" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="30.0">
         <font>
            <Font size="15.0" />
         </font></Button>
      <VBox alignment="CENTER" layoutX="20.0" layoutY="45.0" prefHeight="643.0" prefWidth="549.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="70.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Student ID:" />
                  <Label fx:id="lblID" minWidth="40.0" text="Generated ID" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Student Name:" />
                  <TextField fx:id="txtName" disable="true" onAction="#txtNameOnAction" onKeyReleased="#txtNameOnKeyReleased" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label fx:id="lblGender" minWidth="100.0" text="Gender" />
                  <RadioButton fx:id="rdoMale" disable="true" mnemonicParsing="false" onAction="#rdoMaleOnAction" text="Male">
                     <toggleGroup>
                        <ToggleGroup fx:id="gender" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="rdoFemale" disable="true" mnemonicParsing="false" onAction="#rdoFemaleOnAction" text="Femail" toggleGroup="$gender" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Contacts" />
                  <TextField fx:id="txtContact" disable="true" onAction="#txtContactOnAction" onKeyReleased="#txtContactOnKeyReleased" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnAdd" disable="true" mnemonicParsing="false" onAction="#btnAddOnAction" text="Add" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label minWidth="100.0" prefHeight="16.0" prefWidth="63.0" />
                  <ListView fx:id="lstContacts" minHeight="70.0" minWidth="100.0" onKeyReleased="#lstContactsOnKeyReleased" prefHeight="74.0" prefWidth="299.0" />
                  <Button fx:id="btnRemove" disable="true" mnemonicParsing="false" onAction="#btnRemoveOnAction" text="Remove" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Degree programe" />
                  <ComboBox fx:id="cmbDegree" onAction="#cmbDegreeOnAction" prefHeight="24.0" prefWidth="199.0" promptText="-- Select a Degree --" />
                  <Label text="No Programe has been selected" />
               </children>
            </HBox>
            <HBox prefHeight="172.0" prefWidth="1002.0" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Modules" />
                  <ListView fx:id="lstAvailableModules" disable="true" maxWidth="400.0" minHeight="130.0" minWidth="142.0" onKeyReleased="#lstAvailableModulesOnKeyReleased" prefHeight="99.0" prefWidth="142.0" HBox.hgrow="ALWAYS" />
                  <VBox spacing="20.0">
                     <children>
                        <Button fx:id="btnSelect" disable="true" mnemonicParsing="false" onAction="#btnSelectOnAction" text="&gt;">
                           <font>
                              <Font size="15.0" />
                           </font></Button>
                        <Button fx:id="btnUnSelect" disable="true" mnemonicParsing="false" onAction="#btnUnSelectOnAction" text="&lt;">
                           <font>
                              <Font size="15.0" />
                           </font></Button>
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <ListView fx:id="lstSelectedModules" disable="true" maxWidth="400.0" minWidth="235.0" onKeyReleased="#lstSelectedModulesOnKeyReleased" prefHeight="99.0" prefWidth="235.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <CheckBox fx:id="ckbPartTime" disable="true" mnemonicParsing="false" onAction="#ckbPartTimeOnAction" text="Part Time">
                     <HBox.margin>
                        <Insets left="110.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="24.0" prefWidth="426.0" spacing="20.0">
               <children>
                  <Button fx:id="btnSave" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save">
                     <HBox.margin>
                        <Insets left="110.0" />
                     </HBox.margin></Button>
                  <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" />
               </children>
            </HBox>
            <TableView fx:id="tblStudents" maxWidth="1.7976931348623157E308" prefHeight="165.0" prefWidth="1002.0" VBox.vgrow="ALWAYS">
              <columns>
                  <TableColumn maxWidth="2000.0" prefWidth="-1.0" text="ID" />
                <TableColumn prefWidth="122.0" text="NAME" />
                <TableColumn maxWidth="3000.0" prefWidth="89.0" text="GENDER" />
                  <TableColumn prefWidth="209.0" text="CONTACTS" />
                  <TableColumn maxWidth="6000.0" prefWidth="142.0" text="DEGREE" />
                  <TableColumn prefWidth="166.0" text="MODULES" />
                  <TableColumn maxWidth="3000.0" prefWidth="107.0" text="TIME" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
